@model webBanThucPham.Models.Page

@{
    ViewData["Title"] = "Chỉnh sửa trang";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Chỉnh sửa trang</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PageId" />

            <div class="form-group">
                <label asp-for="PageName" class="control-label">Tiêu đề trang</label>
                <input asp-for="PageName" class="form-control" placeholder="Nhập tiêu đề trang..." />
                <span asp-validation-for="PageName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Contents" class="control-label">Nội dung trang</label>
                <textarea asp-for="Contents" class="form-control" id="ckeditor"></textarea>
                <span asp-validation-for="Contents" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Thumb" class="control-label">Ảnh đại diện</label>
                <input type="file" class="form-control" name="ThumbFile" />
                @if (!string.IsNullOrEmpty(Model.Thumb))
                {
                    <div class="mt-2">
                        <img src="@Model.Thumb" class="img-thumbnail" width="150" />
                    </div>
                }
            </div>

            <div class="form-group">
                <label asp-for="Published" class="control-label">Trạng thái</label>
                <select asp-for="Published" class="form-control">
                    <option value="true">Công khai</option>
                    <option value="false">Nháp</option>
                </select>
                <span asp-validation-for="Published" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Title" class="control-label">Tiêu đề SEO</label>
                <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề SEO..." />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MetaDesc" class="control-label">Mô tả SEO</label>
                <input asp-for="MetaDesc" class="form-control" placeholder="Nhập mô tả SEO..." />
                <span asp-validation-for="MetaDesc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MetaKey" class="control-label">Từ khóa SEO</label>
                <input asp-for="MetaKey" class="form-control" placeholder="Nhập từ khóa SEO..." />
                <span asp-validation-for="MetaKey" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Alias" class="control-label">Đường dẫn Alias</label>
                <input asp-for="Alias" class="form-control" placeholder="Nhập alias trang..." />
                <span asp-validation-for="Alias" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreateDate" class="control-label">Ngày tạo</label>
                <input asp-for="CreateDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ordering" class="control-label">Thứ tự hiển thị</label>
                <input asp-for="Ordering" class="form-control" type="number" step="1" min="1" placeholder="Nhập thứ tự hiển thị..." />
                <span asp-validation-for="Ordering" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

<!-- Thêm CKEditor -->
<script src="https://cdn.ckeditor.com/4.21.0/full/ckeditor.js"></script>
<script>
    CKEDITOR.replace('ckeditor', {
        filebrowserUploadUrl: '/Admin/Pages/UploadImage', // API xử lý upload ảnh
        filebrowserUploadMethod: 'form'
    });
</script>
