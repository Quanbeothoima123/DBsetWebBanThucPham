@model List<Cartitem>
@* Đây là danh sách Cartitem được truyền từ controller để hiển thị *@

@{
    ViewData["Title"] = "Xác nhận thanh toán";
    decimal totalPrice = 0;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container my-5">
    <h2 class="mb-4 text-center">Xác nhận đơn hàng</h2>

    <form asp-action="Checkout" method="post">
        <div class="table-responsive">
            <table class="table table-bordered align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Hình ảnh</th>
                        <th>Mã SP</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];
                        decimal itemTotal = (item.Product.Price ?? 0) * (item.Quantity ?? 0);
                        totalPrice += itemTotal;
                        <tr>
                            <td>
                                <img src="@item.Product.Thumb" alt="Ảnh" style="width: 80px; height: 80px; object-fit: cover;" />
                            </td>
                            <td>@item.Product.ProductId</td>
                            <td>@item.Product.ProductName</td>
                            <td>@String.Format("{0:N0}₫", item.Product.Price)</td>
                            <td>
                                <input type="hidden" name="selectedItems" value="@item.CartItemId" />
                                <input type="number" name="quantities" class="form-control text-center" value="@item.Quantity" min="1" />
                            </td>
                            <td>@String.Format("{0:N0}₫", itemTotal)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-4">
            <h4 class="text-end text-danger">Tổng tiền: @String.Format("{0:N0}₫", totalPrice)</h4>
        </div>

        <div class="mt-5">
            <ul class="nav nav-tabs" id="paymentTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="cod-tab" data-bs-toggle="tab" data-bs-target="#cod" type="button" role="tab">Thanh toán khi nhận hàng</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="momo-tab" data-bs-toggle="tab" data-bs-target="#momo" type="button" role="tab">Mã QR Momo</button>
                </li>
            </ul>
            <div class="tab-content border border-top-0 p-3" id="paymentTabContent">
                <div class="tab-pane fade show active" id="cod" role="tabpanel">
                    <p>Bạn sẽ thanh toán khi nhận hàng (COD).</p>
                    <input type="hidden" name="paymentMethod" value="COD" />
                </div>
                <div class="tab-pane fade" id="momo" role="tabpanel">
                    <p>Phương thức thanh toán bằng mã QR Momo hiện chưa khả dụng.</p>
                    <input type="hidden" name="paymentMethod" value="MOMO" />
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success btn-lg px-5">
                <i class="bi bi-credit-card-fill me-2"></i> Thanh toán
            </button>
        </div>
    </form>
</div>


